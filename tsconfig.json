{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "isolatedModules": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noImplicitThis": false,
    "baseUrl": ".",
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "types": [
      "webpack-env",
    ],
    "paths": {},
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "commitlint.config.js"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "bin",
    "plugins"
  ]
}