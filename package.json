{
  "name": "first-group-low-code",
  "version": "1.0.0",
  "private": true,
  "description": "this is a platform about large screen construction, it's mostly a practice program.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "precommit": "yarn workspaces foreach run precommit",
    "lint": "yarn run lint:script && yarn run lint:style && yarn run prettier",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx,.vue .",
    "lint:style": "stylelint **/*.{less,vue}",
    "lint-fix": "yarn run lint-fix:script && yarn run lint-fix:style && yarn run prettier:fix",
    "lint-fix:script": "npm run lint:script -- --fix",
    "lint-fix:style": "npm run lint:style -- --fix",
    "prettier": "prettier -c \"./src/**/*\"",
    "prettier:fix": "prettier --write -l \"./src/**/*\""
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json,css,less,scss,html,md}": [
      "prettier --write -l",
      "git add"
    ],
    "(app)/**/*.{js,jsx,ts,tsx}": "eslint",
    "(app)/**/*.(less|scss)": "stylelint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2632755669/first-group-low-code.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/2632755669/first-group-low-code/issues"
  },
  "homepage": "https://github.com/2632755669/first-group-low-code#readme",
  "dependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "husky": "^8.0.3",
    "lerna": "^6.6.1"
  },
  "devDependencies": {
    "lint-staged": "^13.2.0",
    "prettier": "2.8.1",
    "px2rem-loader": "0.1.9",
    "stylelint": "^13"
  }
}